<% if(experience != null) { %>
    <div uk-grid>
        <div class="uk-width-1-4@m">
            <h3 class="uk-h4 uk-margin-remove-bottom">
                <%= experience.title %> - <%= experience.status %><br><%= experience.organisation %>
            </h3>
            <p class="tm-text-lead uk-display-block uk-text-muted"><time><%= experience.date_begin %></time> - <time><%= experience.date_end %></time></p>
        </div>
        <div class="uk-width-expand@m">
            <p class="uk-text-muted"><%= experience.description %></p>
        </div>
    </div>
<% } %>
