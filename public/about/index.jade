include /_includes/_mixins

-var data = public.about._data
-var objective = data.content[0]
-var education = data.content[1]
-var professional = data.content[2]

// top
section.uk-section.uk-section-large.uk-section-default
	div.uk-container.uk-text-center
		h1.uk-heading-primary=data.title
		p.uk-text-large!=data.resume
		div.uk-flex.uk-flex-center
			ul.uk-subnav
				each content in data.content
					li
						a(href="#"+content.name uk-scroll)=content.title
				li
					a.uk-disabled |
				each share in public._data.share
					li
						a(href=share.href target="_blank")=share.icon
							span(uk-icon="icon: link")

//Objective
section.uk-section.uk-section-large.uk-section-primary(id=objective.name)
	div.uk-container.uk-text-center
		h2=objective.title
		p!=objective.description

//Education
section.uk-section.uk-section-large.uk-section-default(id=education.name)
	div.uk-container
		div.uk-text-center.uk-margin-large-bottom
			h2=education.title
			p!=education.description
		div.uk-flex-center.uk-grid-large(class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid uk-height-match="target: > a > .uk-card")
			each diplome in education.diplomes
				+card-education(diplome)

//Professional
div(class="uk-child-width-1-2@s" id=professional.name uk-grid)
	div.uk-tile-muted.uk-padding-large
		section.uk-section.uk-section-large.uk-container.uk-container-center
			h2.uk-text-=professional.title
			p.uk-text-lead!=professional.description
	div.uk-tile-primary.uk-preserve-color
		div(class="uk-child-width-1-2" uk-grid)
			section.uk-section.uk-section-large.uk-container.uk-container-large
				each experience in professional.experiences
					+card-experience(experience)

//CV
section.uk-section.uk-section-large.uk-section-default
	div.uk-container.uk-container-center.uk-text-center
		h2.uk-text-center Au plus simple
		p.uk-text-center Allez voir mon curriculum vitae résumant ma formation, mes experiences et mes compétences.
		a.uk-button.uk-button-primary(role="button" href="/assets/cv-johannhospice.pdf")
			span(uk-icon="icon: file-edit")
			span  Télécharger mon cv
			