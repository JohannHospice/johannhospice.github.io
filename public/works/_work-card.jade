a.uk-link-reset(href="/works/"+work.name)

	div.uk-card.uk-card-default.uk-card-hover.uk-grid-collapse(uk-grid)
		//div.uk-width-1-3.uk-card-media-right.uk-cover-container
		div.uk-card-media-top
			img(src="/assets/works/"+work.name+".jpg" alt=work.name+" image")-//uk-cover
			//canvas(width="" height="")

		//div.uk-width-2-3
		div.uk-card-body
			if work.label
				div.uk-card-badge.uk-label(class="uk-label-"+work.label.type)= work.label.value
		
			h3=work.title
				br
				small.uk-text-uppercase.uk-text-meta=work.subtitle
			
			p(id=descriptionId)=work.description
			
			p.uk-text-uppercase.uk-text-small
				span=work.category
				br
				span.uk-text-meta
					time(datetime=work.dateStart)=work.dateStartFormated
					|  - 
					time(datetime=work.dateEnd)=work.dateEndFormated