include _mixins

header(uk-sticky="sel-target: .uk-navbar-container; animation:uk-animation-slide-top; cls-active: uk-navbar-sticky uk-dark; cls-inactive: uk-navbar-transparent uk-light; top:#home")
    nav.uk-navbar-container.uk-navbar-transparent
        .uk-container.uk-container-large(uk-navbar)
            div.uk-navbar-left
                button.uk-navbar-toggle(class="uk-hidden@s" uk-toggle="target:#offcanvas" uk-navbar-toggle-icon="")
                a.uk-navbar-item.uk-logo(class="uk-visible@s" href="/") 
                    img.jh-logo(src="/assets/images/logo/logo.svg" alt="johann hospice" uk-svg)
            
            div.uk-navbar-center
                a.uk-navbar-item.uk-logo(class="uk-hidden@s" href="/")
                    img.jh-logo(src="/assets/images/logo/logo.svg" alt="johann hospice" uk-svg)
            div.uk-navbar-right
                ul.uk-navbar-nav(class="uk-visible@s")
                    - var i = 0
                    while i < menu.values.length
                        +item(menu.values[i], menu.names[i])
                        -i++
                    div(class="uk-offcanvas-content")
        hr.uk-margin-remove