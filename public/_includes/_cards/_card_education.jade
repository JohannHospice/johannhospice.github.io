include /_includes/_cards/_card
include /_includes/_mixins

mixin card-education(diplome)
	a.uk-link-reset.uk-card.uk-card-hover.uk-card-default.uk-card-small.uk-height-medium.uk-width-medium(uk-toggle="target:#modal-"+diplome.name)
		.uk-card-body.uk-flex.uk-flex-column.uk-flex-between.uk-height-1-1
			div
				.uk-flex.uk-flex-between
					div
						h2.uk-h4.uk-text-uppercase.uk-text-primary=diplome.title
							.uk-text-small=diplome.subtitle
					.uk-text-right
						if diplome.status
							small.uk-text-small.uk-text-uppercase.uk-text-warning=diplome.status
			div
				h3.uk-text-uppercase.uk-text-.uk-text-small.uk-margin-remove=diplome.place
				p.uk-text-uppercase.uk-text-small.uk-margin-remove
					span.uk-text-meta
						time(datetime)=diplome.dateBegin
						|  - 
						time(datetime)=diplome.dateEnd

	div(id="modal-"+diplome.name uk-modal)
		.uk-modal-dialog.uk-margin-auto-vertical
			button.uk-modal-close-default(type="button" uk-close)
			.uk-modal-body
				.uk-grid-small.uk-flex-between.uk-child-width-auto(uk-grid class="uk-child-width-1-1@s")
					div
						h2.uk-text-uppercase.uk-text-muted.uk-text-small.uk-margin-remove=diplome.place
						h3.uk-card-title.uk-text-primary.uk-margin-remove.uk-text-uppercase=diplome.title
					.uk-margin-remove-top
						p.uk-text-uppercase.uk-text-small.uk-margin-remove
							span.uk-text-meta
								time(datetime)=diplome.dateBegin
								|  - 
								time(datetime)=diplome.dateEnd
				p.uk-margin-top=diplome.description
				if diplome.courses
					p.uk-margin-small
						span Unit√©s d'enseignements:
						.uk-column-1-2
							ul.uk-list.uk-list-bullet.uk-text-capitalize
								each course in diplome.courses
									li=course
				hr.uk-divider-small
				a.uk-link-reset(href=diplome.link.href, target="_bank")
					small.uk-text-bold.uk-text-uppercase.uk-text-primary=diplome.link.title
						span(uk-icon="icon: link")