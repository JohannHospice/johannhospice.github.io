-var data = public.works._data

section.uk-section.uk-section-primary
    div.uk-container
        div.uk-text-center
            h1=data.title 
            p.uk-text-large=data.resume
        //-
            ul.uk-subnav.uk-subnav-divider.uk-flex-center#work-grid
                each value in data.type
                    li(uk-filter=value)
                        a(href="#")=value
    
section.uk-section.uk-section-default.uk-preserve-color
    div.uk-container.uk-container-large
        div(class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid)
            each w in data.posts
                div
                    != partial("_work-card", { work: w })
//
    script(src='script.js')