include _mixins

mixin short(values, names)
    - var i = 0
    while i < 4
        +item(values[i], names[i])
        -i++

footer.uk-section.uk-section-secondary

    div.uk-container
        
        div(uk-grid)
            div(class="uk-width-1-1 uk-width-auto@s").uk-text-uppercase
                ul.uk-nav.uk-nav-default(class="uk-text-center uk-text-left@s uk-visible@s" uk-margin)
                    +short(menu.values, menu.names)
                ul.uk-subnav.uk-flex.uk-flex-center(class="uk-hidden@s" uk-margin)
                    +short(menu.values, menu.names)

            div(class="uk-width-expand uk-width-3-5@m")
