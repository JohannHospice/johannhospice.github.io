-var data = public.services._data

section.uk-section.uk-section-large
    div.uk-container.uk-text-center
        h1.uk-heading-primary=data.title 
        p.uk-text-large=data.resume
        ul.uk-grid-match.uk-grid-small.uk-margin-large-top(class='uk-child-width-expand@s', uk-grid)
            each service in data.contents
                li
                    div.uk-card.uk-card-body
                        div(uk-margin)
                            span(uk-icon="icon:" + service.icon + ";ratio:4")
                        h3.uk-card-title= service.title
                        p=service.resume