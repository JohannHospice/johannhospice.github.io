include /_includes/_mixins
header(uk-sticky="show-on-up: true; sel-target: .uk-navbar-container; animation:uk-animation-slide-top; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent; top:301")
    nav.uk-navbar-container.uk-navbar-transparent
        .uk-container.uk-container-large
            div(uk-navbar)
                div.uk-navbar-left
                    a.uk-navbar-item.uk-logo(href="/") 
                        img.jh-logo(src="/assets/images/logo/logo.svg" alt="johann hospice" uk-svg)
                    
                div.uk-navbar-right
                    ul.uk-navbar-nav
                        - var i = 0
                        while i < menu.values.length
                            li(class={'uk-active': (current.path[0] == "index" && menu.values[i] == "/") || menu.values[i].includes(current.path[0])})
                                a(href=menu.values[i])=menu.names[i]
                            -i++
        hr.uk-margin-remove