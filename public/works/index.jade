-var data = public.works._data

section.uk-section.uk-section-primary.uk-section-large
    div.uk-container
        div.uk-text-center
            h1.uk-heading-primary=data.title 
            p.uk-text-large=data.resume
    
section.uk-section.uk-section-default
    div.uk-container.uk-container-expend
        div(class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid)
            each w in data.posts
                div
                    != partial("_work-card", { work: w })