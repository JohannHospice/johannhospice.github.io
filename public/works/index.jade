include /_includes/_mixins
-var data = public.works._data
-var works= data.posts.sort((w1, w2) => {var a = new Date(w1.dateBegin), b = new Date(w2.dateBegin);return a > b ? -1 : (a < b ? 1 : 0)})

//Heading
section.uk-section.uk-section-large.uk-section-default
	.uk-container.uk-flex.uk-flex-center
		.uk-width-xxlarge.uk-text-center
			h1.uk-heading-primary=data.title 
			p.uk-text-lead=data.resume

//Works
section.uk-section.uk-section-large.uk-section-muted.uk-preserve-color
	.uk-container
		.uk-grid-large(class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid)
			each work in works
				div
					+card-work(work)

//-
	-var i = 0
	-var column = 2
	-var line = Math.ceil(works.length / column)
	+dynamic-grid(works.length, 3, 3, column, 1)
		-var j = 0
		if i >= line
			-j = (0.5 + i - line) * column
		else
			-j = i * column
		+card-work(works[j])
		-i++