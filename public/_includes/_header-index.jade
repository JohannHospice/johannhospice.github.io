include _mixins

header(uk-sticky="show-on-up: true; sel-target: .uk-navbar-container; animation:uk-animation-slide-top; cls-active: uk-navbar-sticky uk-dark; cls-inactive: uk-navbar-transparent uk-light; top:#home")
    nav.uk-navbar-container.uk-navbar-transparent
        .uk-container.uk-container-large(uk-navbar)
            div.uk-navbar-left
                a.uk-navbar-item.uk-logo(href="/") 
                    img.jh-logo(src="/assets/images/logo/logo.svg" alt="johann hospice" uk-svg)
            
            div.uk-navbar-right
                ul.uk-navbar-nav
                    - var i = 0
                    while i < menu.values.length
                        +item(menu.values[i], menu.names[i])
                        -i++
                    div(class="uk-offcanvas-content")
        hr.uk-margin-remove